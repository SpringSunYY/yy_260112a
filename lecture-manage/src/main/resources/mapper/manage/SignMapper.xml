<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.SignMapper">

    <resultMap type="Sign" id="SignResult">
        <result property="id"    column="id"    />
        <result property="classroomId"    column="classroom_id"    />
        <result property="lectureId"    column="lecture_id"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="name"    column="name"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSignVo">
        select id, classroom_id, lecture_id, teacher_id, name, remark, user_id, create_time, update_time from tb_sign
    </sql>

    <select id="selectSignList" parameterType="Sign" resultMap="SignResult">
        <include refid="selectSignVo"/>
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="classroomId != null "> and classroom_id = #{classroomId}</if>
            <if test="lectureId != null "> and lecture_id = #{lectureId}</if>
            <if test="teacherId != null "> and teacher_id = #{teacherId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''"> and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}</if>
        </where>
        order by create_time desc
    </select>

    <select id="selectSignById" parameterType="Long" resultMap="SignResult">
        <include refid="selectSignVo"/>
        where id = #{id}
    </select>

    <insert id="insertSign" parameterType="Sign" useGeneratedKeys="true" keyProperty="id">
        insert into tb_sign
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">classroom_id,</if>
            <if test="lectureId != null">lecture_id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">#{classroomId},</if>
            <if test="lectureId != null">#{lectureId},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSign" parameterType="Sign">
        update tb_sign
        <trim prefix="SET" suffixOverrides=",">
            <if test="classroomId != null">classroom_id = #{classroomId},</if>
            <if test="lectureId != null">lecture_id = #{lectureId},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSignById" parameterType="Long">
        delete from tb_sign where id = #{id}
    </delete>

    <delete id="deleteSignByIds" parameterType="String">
        delete from tb_sign where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
