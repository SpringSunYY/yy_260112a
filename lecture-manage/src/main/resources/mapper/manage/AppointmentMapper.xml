<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.AppointmentMapper">

    <resultMap type="Appointment" id="AppointmentResult">
        <result property="id"    column="id"    />
        <result property="classroomId"    column="classroom_id"    />
        <result property="lectureId"    column="lecture_id"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="appointmentDescription"    column="appointment_description"    />
        <result property="status"    column="status"    />
        <result property="auditUserId"    column="audit_user_id"    />
        <result property="auditTime"    column="audit_time"    />
        <result property="auditDescription"    column="audit_description"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAppointmentVo">
        select id, classroom_id, lecture_id, teacher_id, appointment_description, status, audit_user_id, audit_time, audit_description, remark, user_id, create_time, update_time from tb_appointment
    </sql>

    <select id="selectAppointmentList" parameterType="Appointment" resultMap="AppointmentResult">
        <include refid="selectAppointmentVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="classroomId != null ">and classroom_id = #{classroomId}</if>
            <if test="lectureId != null ">and lecture_id = #{lectureId}</if>
            <if test="teacherId != null ">and teacher_id = #{teacherId}</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="auditUserId != null ">and audit_user_id = #{auditUserId}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectAppointmentById" parameterType="Long" resultMap="AppointmentResult">
        <include refid="selectAppointmentVo"/>
        where id = #{id}
    </select>

    <insert id="insertAppointment" parameterType="Appointment" useGeneratedKeys="true" keyProperty="id">
        insert into tb_appointment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">classroom_id,</if>
            <if test="lectureId != null">lecture_id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="appointmentDescription != null and appointmentDescription != ''">appointment_description,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="auditUserId != null">audit_user_id,</if>
            <if test="auditTime != null">audit_time,</if>
            <if test="auditDescription != null">audit_description,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">#{classroomId},</if>
            <if test="lectureId != null">#{lectureId},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="appointmentDescription != null and appointmentDescription != ''">#{appointmentDescription},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="auditUserId != null">#{auditUserId},</if>
            <if test="auditTime != null">#{auditTime},</if>
            <if test="auditDescription != null">#{auditDescription},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAppointment" parameterType="Appointment">
        update tb_appointment
        <trim prefix="SET" suffixOverrides=",">
            <if test="classroomId != null">classroom_id = #{classroomId},</if>
            <if test="lectureId != null">lecture_id = #{lectureId},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="appointmentDescription != null and appointmentDescription != ''">appointment_description = #{appointmentDescription},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="auditUserId != null">audit_user_id = #{auditUserId},</if>
            <if test="auditTime != null">audit_time = #{auditTime},</if>
            <if test="auditDescription != null">audit_description = #{auditDescription},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAppointmentById" parameterType="Long">
        delete from tb_appointment where id = #{id}
    </delete>

    <delete id="deleteAppointmentByIds" parameterType="String">
        delete from tb_appointment where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
