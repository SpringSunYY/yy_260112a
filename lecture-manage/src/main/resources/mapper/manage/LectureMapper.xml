<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.LectureMapper">

    <resultMap type="Lecture" id="LectureResult">
        <result property="id"    column="id"    />
        <result property="classroomId"    column="classroom_id"    />
        <result property="name"    column="name"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="peopleNumberLimit"    column="people_number_limit"    />
        <result property="lectureStartTime"    column="lecture_start_time"    />
        <result property="lectureEndTime"    column="lecture_end_time"    />
        <result property="peopleJoinNumber"    column="people_join_number"    />
        <result property="peopleSignNumber"    column="people_sign_number"    />
        <result property="status"    column="status"    />
        <result property="description"    column="description"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectLectureVo">
        select id, classroom_id, name, teacher_id, people_number_limit, lecture_start_time, lecture_end_time, people_join_number, people_sign_number, status, description, remark, user_id, create_time, update_time from tb_lecture
    </sql>

    <select id="selectLectureList" parameterType="Lecture" resultMap="LectureResult">
        <include refid="selectLectureVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="classroomId != null ">and classroom_id = #{classroomId}</if>
            <if test="name != null  and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="teacherId != null ">and teacher_id = #{teacherId}</if>
            <if test="params.beginLectureStartTime != null and params.beginLectureStartTime != '' and params.endLectureStartTime != null and params.endLectureStartTime != ''">
                and DATE_FORMAT(lecture_start_time, '%Y-%m-%d') between #{params.beginLectureStartTime} and
                #{params.endLectureStartTime}
            </if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="noStatues != null and noStatues.size >0">
                and status not in
                <foreach collection="noStatues" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>

            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="createTime != null ">and create_time = #{createTime}</if>
        </where>
    </select>

    <select id="selectLectureById" parameterType="Long" resultMap="LectureResult">
        <include refid="selectLectureVo"/>
        where id = #{id}
    </select>

    <insert id="insertLecture" parameterType="Lecture" useGeneratedKeys="true" keyProperty="id">
        insert into tb_lecture
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">classroom_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="peopleNumberLimit != null">people_number_limit,</if>
            <if test="lectureStartTime != null">lecture_start_time,</if>
            <if test="lectureEndTime != null">lecture_end_time,</if>
            <if test="peopleJoinNumber != null">people_join_number,</if>
            <if test="peopleSignNumber != null">people_sign_number,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="description != null">description,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">#{classroomId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="peopleNumberLimit != null">#{peopleNumberLimit},</if>
            <if test="lectureStartTime != null">#{lectureStartTime},</if>
            <if test="lectureEndTime != null">#{lectureEndTime},</if>
            <if test="peopleJoinNumber != null">#{peopleJoinNumber},</if>
            <if test="peopleSignNumber != null">#{peopleSignNumber},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="description != null">#{description},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateLecture" parameterType="Lecture">
        update tb_lecture
        <trim prefix="SET" suffixOverrides=",">
            <if test="classroomId != null">classroom_id = #{classroomId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="peopleNumberLimit != null">people_number_limit = #{peopleNumberLimit},</if>
            <if test="lectureStartTime != null">lecture_start_time = #{lectureStartTime},</if>
            <if test="lectureEndTime != null">lecture_end_time = #{lectureEndTime},</if>
            <if test="peopleJoinNumber != null">people_join_number = #{peopleJoinNumber},</if>
            <if test="peopleSignNumber != null">people_sign_number = #{peopleSignNumber},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="description != null">description = #{description},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLectureById" parameterType="Long">
        delete from tb_lecture where id = #{id}
    </delete>

    <delete id="deleteLectureByIds" parameterType="String">
        delete from tb_lecture where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
