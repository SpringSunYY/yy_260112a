<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.LectureAuditMapper">

    <resultMap type="LectureAudit" id="LectureAuditResult">
        <result property="id"    column="id"    />
        <result property="classroomId"    column="classroom_id"    />
        <result property="lectureId"    column="lecture_id"    />
        <result property="teacherId"    column="teacher_id"    />
        <result property="peopleNumberLimit"    column="people_number_limit"    />
        <result property="status"    column="status"    />
        <result property="description"    column="description"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectLectureAuditVo">
        select id, classroom_id, lecture_id, teacher_id, people_number_limit, status, description, user_id, create_time, update_time from tb_lecture_audit
    </sql>

    <select id="selectLectureAuditList" parameterType="LectureAudit" resultMap="LectureAuditResult">
        <include refid="selectLectureAuditVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="classroomId != null ">and classroom_id = #{classroomId}</if>
            <if test="lectureId != null ">and lecture_id = #{lectureId}</if>
            <if test="teacherId != null ">and teacher_id = #{teacherId}</if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectLectureAuditById" parameterType="Long" resultMap="LectureAuditResult">
        <include refid="selectLectureAuditVo"/>
        where id = #{id}
    </select>

    <insert id="insertLectureAudit" parameterType="LectureAudit" useGeneratedKeys="true" keyProperty="id">
        insert into tb_lecture_audit
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">classroom_id,</if>
            <if test="lectureId != null">lecture_id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="peopleNumberLimit != null">people_number_limit,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="description != null">description,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="classroomId != null">#{classroomId},</if>
            <if test="lectureId != null">#{lectureId},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="peopleNumberLimit != null">#{peopleNumberLimit},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="description != null">#{description},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateLectureAudit" parameterType="LectureAudit">
        update tb_lecture_audit
        <trim prefix="SET" suffixOverrides=",">
            <if test="classroomId != null">classroom_id = #{classroomId},</if>
            <if test="lectureId != null">lecture_id = #{lectureId},</if>
            <if test="teacherId != null">teacher_id = #{teacherId},</if>
            <if test="peopleNumberLimit != null">people_number_limit = #{peopleNumberLimit},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="description != null">description = #{description},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLectureAuditById" parameterType="Long">
        delete from tb_lecture_audit where id = #{id}
    </delete>

    <delete id="deleteLectureAuditByIds" parameterType="String">
        delete from tb_lecture_audit where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
